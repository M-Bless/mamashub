<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".pnc.ChildProfileActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/layout_dotted"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageViewProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/profile"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="0dp" />


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableLayout
                    android:layout_marginStart="10dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Child Name Row -->
                    <TableRow>
                        <TextView
                            android:id="@+id/text_child_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Child Name"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/textColor"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/textColor"
                            android:text=":"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <!-- Use LinearLayout to handle content properly -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/tvName"
                                android:singleLine="false"
                                android:ellipsize="end"
                                android:maxLines="4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/textColor" />
                        </LinearLayout>
                    </TableRow>

                    <!-- Age Row -->
                    <TableRow>

                        <TextView
                            android:id="@+id/text_child_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Age"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/textColor"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/textColor"
                            android:text=":"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/text_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/textColor" />
                    </TableRow>

                    <!-- B/N No Row -->
                    <TableRow
                        android:visibility="gone">
                        <TextView

                            android:id="@+id/text_bn_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="B/N No"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/textColor"
                            android:textStyle="bold"
                            android:visibility="gone"/>

                        <TextView
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/textColor"
                            android:text=":"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tvBNN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColor" />
                    </TableRow>

                    <!-- Date of Birth (DOB) Row -->
                    <TableRow>
                        <TextView
                            android:id="@+id/text_child_dob"
                            android:textStyle="bold"
                            android:textColor="@color/textColor"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:text="Date of Birth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/textColor"
                            android:text=":"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/tvAge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/textColor" />
                        </LinearLayout>
                    </TableRow>

                    <!-- EDD Row (Invisible by default) -->
                    <TableRow
                        android:visibility="gone">
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/textColor"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:text="Edd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/textColor"
                            android:text=":"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tvEdd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jane Doe"
                            android:textColor="@color/textColor" />
                    </TableRow>

                </TableLayout>


                <View
                    android:layout_margin="@dimen/_5dp"
                    android:background="@color/primary"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:id="@+id/linearCall"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/textColor"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:text="Next of Kin Details:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvKinName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="10dp"
                                android:text=" Name"
                                android:textColor="@color/textColor" />


                            <TextView
                                android:id="@+id/tvKinDetails"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="10dp"
                                android:text=" Number"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/textColor" />


                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imgViewCall"
                                android:background="@drawable/ic_action_call"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/btn_go_to_immunization"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_15dp"
                android:text="Child Information"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/headerColor"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>





        </LinearLayout>

    </LinearLayout>

</LinearLayout>