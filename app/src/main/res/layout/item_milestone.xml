<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvMilestonevisitlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Milestone Visit : "
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvMilestonevisit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Milestone Visit"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMilestoneagelabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Milestone Age : "
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvMilestoneage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Milestone Age"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvMilestonetimelabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Milestone Time"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvMilestonetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Milestone Time"
            />
    </LinearLayout>


</LinearLayout>